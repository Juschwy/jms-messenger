<idea-plugin>
    <id>jms-messenger</id>
    <name>Jms messenger</name>
    <vendor email="kipill_90@mail.ru" url="https://github.com/klyashko/jms-messenger">
        Lyashko Kirill
    </vendor>

    <description><![CDATA[
<h4>Description:</h4>
This is a plugin for providing jms support.
Plugin supports:
<ul>
 <li>browsing messages</li>
 <li>deleting messages</li>
 <li>sending messages</li>
</ul>

<h4>Requirements:</h4>
<ul>
 <li>Jdk 1.8 or higher</li>
 <li>Version of ide 2018 or higher</li>
</ul>

<h4>Usages:</h4>
 Designed to be used for development or testing purposes

<h4>Supported jms providers:</h4>
<ul>
 <li>Wildfly 10.x.x or higher (Artemis)</li>
 <li>Artemis (over HTTP or TCP)</li>
 <li>Wildfly 9.x.x (HornetQ)</li>
 <li>ActiveMq (over TCP)</li>
 <li>HornetQ (over HTTP)</li>
</ul>

<h4>Limitation:</h4>
<ul>
 <li>Currently only queue destinations are supported.</li>
 <li>Only text messages may be send or browse.</li>
</ul>

<h4>Suggestions and bug reports:</h4>
 In case of finding bug or having a suggestion about new features or supported providers you can open a ticket on
 <a href="https://github.com/klyashko/jms-messenger/issues">Github</a> or contact me directly.
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products
         To enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>com.idea.tools.JmsMessengerComponent</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable groupId="tools" groupWeight="110" dynamic="true" displayName="Jms Messenger"
                             id="preferences.jms.messenger" instance="com.idea.tools.JmsMessengerComponent"/>

        <projectService serviceInterface="com.idea.tools.view.ServersBrowseToolPanel"
                        serviceImplementation="com.idea.tools.view.ServersBrowseToolPanel"/>
        <projectService serviceInterface="com.idea.tools.view.QueueBrowseToolPanel"
                        serviceImplementation="com.idea.tools.view.QueueBrowseToolPanel"/>
        <projectService serviceInterface="com.idea.tools.JmsMessengerWindowManager"
                        serviceImplementation="com.idea.tools.JmsMessengerWindowManager"/>

        <projectService serviceInterface="com.idea.tools.settings.Settings"
                        serviceImplementation="com.idea.tools.settings.Settings"/>
        <projectService serviceInterface="com.idea.tools.service.ServerService"
                        serviceImplementation="com.idea.tools.service.ServerService"/>
        <projectService serviceInterface="com.idea.tools.service.QueueService"
                        serviceImplementation="com.idea.tools.service.QueueService"/>
        <projectService serviceInterface="com.idea.tools.service.JmsService"
                        serviceImplementation="com.idea.tools.service.JmsService"/>
    </extensions>
